<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SetSecurityQuestionsActivity">

    <EditText
        android:id="@+id/ans3_editTxt_resetPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ans2_editTxt_resetPass"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/input_design"
        android:hint="Q3/ Quel est votre numéro préféré ?"
        android:maxLines="1"
        android:padding="10dp"
        android:inputType="number"
        android:textColor="@color/darkGray"
        android:textColorHint="@color/lightGray"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ans2_editTxt_resetPass"
        android:fontFamily="@font/kanit"/>



    <RelativeLayout
        android:id="@+id/rl_reset_pass"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:background="@color/darkGreen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/reset_password_txtView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="25dp"
            android:text="Réinitialiser le mot de passe"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:fontFamily="@font/kanit"/>
    </RelativeLayout>

    <EditText
        android:id="@+id/enter_phone_editTxt_resetPass"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/input_design"
        android:hint="Veuillez entrer votre numéro de téléphone"
        android:maxLines="1"
        android:padding="10dp"
        android:textColor="@color/darkGray"
        android:textColorHint="@color/lightGray"
        android:textSize="18sp"
        android:textStyle="bold"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rl_reset_pass"
        app:layout_constraintVertical_bias="0.042"
        android:fontFamily="@font/kanit"/>

    <EditText
        android:id="@+id/ans1_editTxt_resetPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Security_txtView_resetPass"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/input_design"
        android:hint="Q1/ Dans quelle ville êtes-vous né?"
        android:maxLines="1"
        android:padding="10dp"
        android:textColor="@color/darkGray"
        android:textColorHint="@color/lightGray"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Security_txtView_resetPass"
        android:fontFamily="@font/kanit"/>

    <TextView
        android:id="@+id/Security_txtView_resetPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:text="Répondez aux questions de sécurité suivantes !"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="25sp"
        android:textColor="@color/darkGray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/enter_phone_editTxt_resetPass"
        android:fontFamily="@font/kanit"/>

    <EditText
        android:id="@+id/ans2_editTxt_resetPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ans1_editTxt_resetPass"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/input_design"
        android:hint="Q2/ Quel est le nom de jeune fille de votre mère?"
        android:maxLines="1"
        android:padding="10dp"
        android:textColor="@color/darkGray"
        android:textColorHint="@color/lightGray"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ans1_editTxt_resetPass"
        android:fontFamily="@font/kanit"/>

    <Button
        android:id="@+id/verify_btn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/colorOnSecondary"
        android:padding="10dp"
        android:text="Vérifier"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:fontFamily="@font/kanit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.551"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ans3_editTxt_resetPass"
        app:layout_constraintVertical_bias="0.309" />

</androidx.constraintlayout.widget.ConstraintLayout>