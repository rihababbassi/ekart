<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SetSecurityQuestionsActivity">

    <EditText
        android:id="@+id/q1_editTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Q1_txtView"
        android:background="@drawable/input_design"
        android:hint="Votre réponse..."
        android:layout_marginLeft="10dp"
        android:maxLines="1"
        android:padding="10dp"
        android:layout_marginRight="10dp"
        android:textColor="@color/darkGray"
        android:textColorHint="@color/colorOnSecondary"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Q1_txtView"
        android:fontFamily="@font/kanit"/>
    <EditText
        android:id="@+id/q2_editTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Q1_txtView"
        android:background="@drawable/input_design"
        android:hint="Votre réponse..."
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:maxLines="1"
        android:padding="10dp"
        android:textColor="@color/darkGray"
        android:textColorHint="@color/colorOnSecondary"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Q2_txtView"
        android:fontFamily="@font/kanit"/>
    <EditText
        android:id="@+id/q3_editTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Q1_txtView"
        android:background="@drawable/input_design"
        android:maxLines="1"
        android:hint="Votre réponse..."
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:padding="10dp"
        android:textColor="@color/darkGray"
        android:textColorHint="@color/colorOnSecondary"
        android:textSize="14sp"
        android:textStyle="bold"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Q3_txtView"
        android:fontFamily="@font/kanit"/>

    <RelativeLayout
        android:id="@+id/rl_security"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:background="@color/darkGreen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/set_questions_txtView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="25dp"
            android:text="Définir les questions"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:fontFamily="@font/kanit"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/Security_txtView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:text="Veuillez définir les réponses aux questions de sécurité suivantes!"
        android:textAlignment="center"
        android:textColor="@color/darkGray"
        android:textStyle="bold"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rl_security"
        android:fontFamily="@font/kanit"/>

    <TextView
        android:id="@+id/Q1_txtView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="40dp"
        android:text="Q1/ Dans quelle ville êtes-vous né?"
        android:textColor="@color/lightGray"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Security_txtView"
        android:fontFamily="@font/kanit"/>

    <TextView
        android:id="@+id/Q2_txtView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:text="Q2/ Quel est le nom de jeune fille de votre mère?"
        android:textColor="@color/lightGray"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/q1_editTxt"
        android:fontFamily="@font/kanit"/>

    <TextView
        android:id="@+id/Q3_txtView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:text="Q3/ Quel est votre numéro préféré ?"
        android:textColor="@color/lightGray"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/q2_editTxt"
        android:fontFamily="@font/kanit"/>

    <Button
        android:id="@+id/setQuestions_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="15dp"
        android:background="@color/colorPrimary"
        android:padding="10dp"
        android:text="Appliquer"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:fontFamily="@font/kanit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/q3_editTxt" />

</androidx.constraintlayout.widget.ConstraintLayout>