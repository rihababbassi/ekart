<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminCategoryActivity"
   >

<androidx.appcompat.widget.Toolbar

        android:id="@+id/tl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/ff"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginLeft="15dp"
            android:src="@drawable/ic_cross" />

</androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/final_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tl"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        android:text="Sélectionner une catégorie"
        android:textAlignment="center"
        android:textColor="@color/darkGray"
        android:textSize="25dp"
        android:textStyle="bold"
        android:fontFamily="@font/kanit"/>

    <LinearLayout
        android:id="@+id/f1"
        android:layout_below="@+id/final_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:layout_gravity="center"
            android:background="@drawable/restau"/>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorOnSecondary"
                android:layout_marginTop="5dp"
                android:textSize="16dp"
                android:textStyle="bold"
                android:fontFamily="@font/kanit"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Restauration"
                android:textSize="16dp"
                android:textColor="#2d2d2d"
                android:layout_marginTop="3dp"
                android:textStyle="bold"
                android:fontFamily="@font/kanit"/>


        </LinearLayout>


        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/restauration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sélectionner"
                android:textColor="@color/white"
                android:background="@color/green"
                android:gravity="center"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="25dp"
                android:textSize="18dp"
                android:fontFamily="@font/kanit"
                android:layout_marginRight="15dp"
                />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/f2"
        android:layout_below="@+id/f1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:layout_gravity="center"
            android:background="@drawable/electricity"
            />

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:layout_marginTop="5dp"
                android:textSize="16dp"
                android:textStyle="bold"
                android:fontFamily="@font/kanit"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Electricité "
                android:textSize="16dp"
                android:textColor="#2d2d2d"
                android:layout_marginTop="3dp"
                android:textStyle="bold"
                android:fontFamily="@font/kanit"/>


        </LinearLayout>


        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/electricity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sélectionner"
                android:textColor="@color/white"
                android:background="@color/green"
                android:gravity="center"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="25dp"
                android:textSize="18dp"
                android:fontFamily="@font/kanit"
                android:layout_marginRight="15dp"/>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/f3"
        android:layout_below="@+id/f2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:layout_gravity="center"
            android:background="@drawable/quin"/>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorOnSecondary"
                android:layout_marginTop="5dp"
                android:textSize="16dp"
                android:textStyle="bold"
                android:fontFamily="@font/kanit"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quincaillerie"
                android:textSize="16dp"
                android:textColor="#2d2d2d"
                android:layout_marginTop="3dp"
                android:textStyle="bold"
                android:fontFamily="@font/kanit"/>


        </LinearLayout>


        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/quincaillerie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sélectionner"
                android:textColor="@color/white"
                android:background="@color/green"
                android:gravity="center"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="25dp"
                android:textSize="18dp"
                android:fontFamily="@font/kanit"
                android:layout_marginRight="15dp"/>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/f4"
        android:layout_below="@+id/f3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:layout_gravity="center"
            android:background="@drawable/industriel"/>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorOnSecondary"
                android:layout_marginTop="5dp"
                android:textSize="16dp"
                android:textStyle="bold"
                android:fontFamily="@font/kanit"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Industriel"
                android:textSize="16dp"
                android:textColor="#2d2d2d"
                android:layout_marginTop="3dp"
                android:textStyle="bold"
                android:fontFamily="@font/kanit"/>


        </LinearLayout>


        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/industry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sélectionner"
                android:textColor="@color/white"
                android:background="@color/green"
                android:gravity="center"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="25dp"
                android:textSize="18dp"
                android:fontFamily="@font/kanit"
                android:layout_marginRight="15dp"/>

        </LinearLayout>


    </LinearLayout>











</RelativeLayout>